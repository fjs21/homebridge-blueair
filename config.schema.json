{
  "pluginAlias": "BlueAir",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "BlueAir Devices are exposed following login to the BlueAir API. All devices on the account should be listed in the Home app following successful login.",
  "footerDisplay": "",
  "schema": {
    "type": "object",
    "properties": {
        "username": {
            "title": "username",
            "type": "string",
            "required": true
        },
        "password": {
            "title": "password",
            "type": "string",
            "required": true
        },
        "enableAWS": {
            "title": "Enable AWS API connection (required for devices like DustMagnet and HealthProtect)",
            "type": "boolean",
            "required": false
        },
        "region": {
          "title": "Region",
          "type": "string",
          "default": "us",
          "oneOf": [
            { "title": "US", "enum": ["us"] },
            { "title": "EU", "enum": ["eu"] }
          ],
          "required": true
        },
        "options": {
            "title": "Feature Options",
            "type": "array",

            "items": {
                "type": "string",
                "title": "Feature Option",
                "required": false,
                "description": "Enter only one option per entry. See project page for the complete list of available options.",
                "placeholder": "e.g. Disable.uuid"
            }
        },
        "timeout": {
            "title": "Device timeout (seconds)",
            "type": "number",
            "default": 5000,
            "required": true
        }
    }
  }
}
